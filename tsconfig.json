{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": ".",
		"sourceMap": false,
		"removeComments": true,
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./**/*.ts"],
	"exclude": ["./node_modules"]
}
